#:kivy 1.10.1

ScreenManager:
    StartMenuScreen:
    SettingsScreen:
    DetectorScreen:

<StartMenuScreen>:
    name: 'start'
    FloatLayout:
        Button:
            text: 'Start Gun Detector'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            on_release: app.root.current = 'detector'
        
        Button:
            text: 'Gun Detector Settings'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: app.open_settings()

<SettingsScreen>:
    name: 'settings'
    FloatLayout:
        Label:
            text: 'Welcome to Settings'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, 0.15)

<DetectorScreen>:
    name: 'detector'
    FloatLayout:
        orientation: 'vertical'

        Label:
            height: 20
            text: 'deTECT proTECT'
            font_size: '20sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        Detector:
            id: detector
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: output
            pos_hint: {'center_x': 0.5, 'center_y': 0.1} 
        
        Button:
            text: 'X'
            size_hint: (0.035, 0.035)
            pos_hint: {'center_x': 0.97, 'center_y': 0.97}
            on_release: root.exit()