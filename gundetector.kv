#:kivy 1.10.1

ScreenManager:
    StartMenuScreen:
    DetectorScreen:

<StartMenuScreen>:
    name: 'start'
    FloatLayout:
        Button:
            text: 'Start Gun Detector'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            on_release: app.root.current = 'detector'
        
        Button:
            text: 'Gun Detector Settings'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: app.open_settings()
        
        Button:
            text: 'X'
            size_hint: (0.035, 0.035)
            pos_hint: {'center_x': 0.97, 'center_y': 0.97}
            on_release: root.exit()

<DetectorScreen>:
    name: 'detector'
    FloatLayout:
        orientation: 'vertical'

        Label:
            height: 20
            text: 'deTECT proTECT'
            font_size: '25sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.94}

        Detector:
            id: detector
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}

        Label:
            id: output
            font_size: '30sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.15} 
        
        Button:
            text: 'X'
            size_hint: (0.035, 0.035)
            font_size: '18sp'
            pos_hint: {'center_x': 0.97, 'center_y': 0.97}
            on_release: root.exit()

        Button:
            text: 'Go Back'
            size_hint: (0.075, 0.035)
            font_size: '18sp'
            pos_hint: {'center_x': 0.065, 'center_y': 0.97}
            on_release: root.goBack()