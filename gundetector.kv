#:kivy 1.10.1

ScreenManager:
    StartMenuScreen:
    SettingsScreen:
    DetectorScreen:

<StartMenuScreen>:
    name: 'start'
    FloatLayout:
        Button:
            text: 'Start Gun Detector'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            on_release: app.root.current = 'detector'
        
        Button:
            text: 'Go To Settings'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: app.open_settings()

<SettingsScreen>:
    name: 'settings'
    FloatLayout:
        Label:
            text: 'Welcome to Settings'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, 0.15)

<DetectorScreen>:
    name: 'detector'
    FloatLayout:
        orientation: 'vertical'

        Label:
            height: 20
            text: 'deTECT-proTECT'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        Detector:
            id: detector
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        Label:
            id: output
        
        Button:
            text: 'X'
            size_hint: (0.05, 0.05)
            halign: 'center'
            pos_hint: {'center_x': 0.875, 'center_y': 0.075}
            on_release: root.exit()
