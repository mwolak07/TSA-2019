#:kivy 1.10.1

ScreenManager:
    StartMenuScreen:
    SettingsScreen:
    DetectorScreen:

<StartMenuScreen>:
    name: 'start'
    FloatLayout:
        Button:
            text: 'Start Gun Detector'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            on_release: app.root.current = 'detector'
        
        Button:
            text: 'Go To Settings'
            size_hint: (0.5, 0.15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: app.open_settings()

<SettingsScreen>:
    name: 'settings'
    FloatLayout:
        Label:
            text: 'Welcome to Settings'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, 0.15)

<DetectorScreen>:
    name: 'detector'
    BoxLayout:
        orientation: 'vertical'

        Label:
            height: 20
            size_hint_y: None
            text: 'de-TECT pro-TECT'

        Detector:
            id: detector

        Label:
            id: output
        
        Button:
            text: 'Quit'
            on_release: root.exit()
